<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        # Console appender
        <Console name="stdout" target="SYSTEM_OUT">
            # Pattern of log message for console appender
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%c.%M:%L] %p %m%n"/>
        </Console>        
    </Appenders>

    <Loggers>
        # Override log level for specified package
        <Logger name="com.shadesframework.shadesdata.DataGenHelper" level="WARN"/>
        <Logger name="com.shadesframework.shadesdata.MetaDataHelper" level="WARN"/>
        <Logger name="com.shadesframework.shadesdata.GenerateSynthetic" level="DEBUG"/>
        <Logger name="com.shadesframework.shadesdata.DataSet" level="WARN"/>
        <Logger name="com.shadesframework.shadesdata.CommonHelper" level="WARN"/>

        <Root level="DEBUG">
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>